@model PaginationModel

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <button type="submit" name="pageIndex" value="@(Model.PageIndex - 1)" class="page-link">Previous</button>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        }

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.PageIndex)
            {
                <li class="page-item active"><span class="page-link">@i</span></li>
            }
            else
            {
                <li class="page-item">
                    <button type="submit" name="pageIndex" value="@i" class="page-link">@i</button>
                </li>
            }
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <button type="submit" name="pageIndex" value="@(Model.PageIndex + 1)" class="page-link">Next</button>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        }
    </ul>
</nav>