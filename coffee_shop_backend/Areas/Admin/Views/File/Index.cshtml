@model IEnumerable<FileStorage>

@{
    ViewData["Title"] = "檔案列表";
}

<h2>檔案列表</h2>
<a asp-action="Upload" class="btn btn-primary">上傳檔案</a>

<form method="post" class="form-inline mb-3">
    @Html.AntiForgeryToken()
    <input type="text" name="searchString" value="@ViewBag.SearchString" placeholder="請輸入檔案名稱" class="form-control" />
    <button type="submit" class="btn btn-primary">搜尋</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>編號</th>
            <th>類別</th>
            <th>檔案名稱</th>
            <th>檔案大小</th>
            <th>更新日期</th>
            <th>是否刪除</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FileStorageId</td>
                <td>@item.CategoryType</td>
                <td>@item.OriginalFileName</td>
                <td>@item.FileSize</td>
                <td>@item.UploadDate</td>
                <td>@(item.IsDeleted ? "是" : "否")</td>
                <td>
                    <form method="post" action="@Url.Action("Delete", "File", new { fileStorageId = item.FileStorageId })" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" onclick="return confirm('確定刪除嗎？')">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchString = ViewBag.SearchString })" class="btn btn-secondary">上一頁</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchString = ViewBag.SearchString })" class="btn btn-secondary">下一頁</a>
    }
</div>