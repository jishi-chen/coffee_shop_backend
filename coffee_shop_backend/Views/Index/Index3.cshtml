
<table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>欄位1</th>
            <th>欄位2</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < 15; i++)
        {
            <tr>
                <td>Cell @i-1</td>
                <td>Cell @i-2</td>
            </tr>
        }
    </tbody>

</table>

<link rel="stylesheet" href="~/css/datatables.min.css" />
<script type="text/javascript" src="~/js/datatables.min.js"></script>
<script type="text/javascript" src="~/js/dataTables.responsive.min.js"></script>

<script>
    $(document).ready(function() {
        //分頁中文化
        $._setDataTableLanguageTranslation = function () {
            return {
                oLanguage: {
                    sProcessing: "查詢中...",
                    sLengthMenu: "顯示 _MENU_ 筆資料",
                    sZeroRecords: "目前沒有資料...",
                    sInfo: "顯示第 _START_ 至 _END_ 筆資料，共 _TOTAL_ 筆",
                    sInfoEmpty: "顯示第 0 至 0 筆資料，共 0 筆",
                    sInfoFiltered: "(從 _MAX_ 筆資料過濾)",
                    sSearch: "表格內全文檢索:",
                    oPaginate: { sFirst: "第一頁", sPrevious: "上一頁", sNext: "下一頁", sLast: "最後一頁" }
                }
            }
        };

        //分頁設定-如每頁顯示多少筆
        $._setDataTableOpt = function () {
            return {
                lengthMenu: [[5, 10, 20, 50], [5, 10, 20, 50]],
                ordering: false,
                responsive: true,
                destroy: true
            }
        };

        //分頁中文化+分頁設定
        $.setDataTableAllOpt = function () {
            var newOpts = $.extend({}, $._setDataTableLanguageTranslation(), $._setDataTableOpt());
            return newOpts;
        };

        $('#dataTable').DataTable($.extend($.setDataTableAllOpt(), { lengthMenu: [[10, 20, 30, 50, -1], [10, 20, 30, 50, "所有"]],}));

		var cnt = $('#Cnt').val();
		for (let i = 0; i < cnt; i++) {
			$('#dataTable-' + i).DataTable($.extend($.setDataTableAllOpt(), { lengthMenu: [[-1, 10, 20, 30, 50], ["所有", 10, 20, 30, 50]], }));
		}

    });

</script>