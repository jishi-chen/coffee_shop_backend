@model IEnumerable<Application>
@{
  
}

@section Scripts
{

}

<h1>問卷調查-列表</h1>

<table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>編號</th>
            <th>問卷名稱</th>
            <th>日期</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any()){
            int rowIndex = 1;
            foreach (Application item in Model)
            {
                <tr>
                    <td>@((rowIndex++).ToString("000"))</td>
                    <td><a href="@Url.Action("Detail","QuestionnaireFront", new {id = item.Id})">@item.Caption</a></td>
                    <td>@Html.DisplayFor(x => item.StartDate) ~ @Html.DisplayFor(x => item.EndDate)</td>
                </tr>
                rowIndex++;
            }
        }
    </tbody>
</table>
