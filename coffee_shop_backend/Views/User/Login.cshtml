@model UserLoginViewModel

<a href="@Url.Action("Register","User")">申請</a>
<a href="@Url.Action("Settings","User")">設定</a>

<form method="post" asp-controller="User" asp-action="Login" novalidate>
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="UserName">使用者名稱</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">密碼</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @Html.Partial("_ValidateCodePartial")
    <button type="submit" class="btn btn-primary">提交</button>
</form>
