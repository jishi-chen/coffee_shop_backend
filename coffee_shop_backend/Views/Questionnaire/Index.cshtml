@model IEnumerable<Application>

@{
    
}

<h1>問卷列表</h1>

<table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>標題</th>
            <th>開放填寫日期</th>
            <th>排序值</th>
            <th>點閱率</th>
            <th>修改人員</th>
            <th>異動日期</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any()){
            foreach(var item in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Form","Questionnaire", new {Id = item.Id})">@item.Caption</a></td>
                    <td>@item.StartDate.ToString("yyyy/MM/dd")</td>
                    <td>@item.Sort</td>
                    <td>@item.Hits</td>
                    <td>@(item.Updator == null ? item.Creator : item.Updator)</td>
                    <td>@(item.UpdateDate.HasValue ? item.UpdateDate.Value.ToString("yyyy/MM/dd") : item.CreateDate.ToString("yyyy/MM/dd"))</td>
                </tr>
            }
        }
    </tbody>
</table>

<a href="@Url.Action("Form","Questionnaire")" class="btn btn-primary">新增</a>